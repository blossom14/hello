<%= current_user.name %>의 친구목록
<% @friendships.each do |friendship| %>
	<% if friendship.user == current_user %>
		<br><%= friendship.friend.name %>
		<%= link_to "chat with #{friendship.user.name}", messages_friendship_path(friendship.id) %>
	<% elsif friendship.friend == current_user %>
		<br><%= friendship.user.name %>
		<%= link_to "chat with #{friendship.user.name}", messages_friendship_path(friendship.id) %>
	<% end %>

<% end %>