<% @include_map_js = true %>

<div class="map_wrap">
    <div id="map" style="width:100%;height:100%;position:relative;overflow:hidden;"></div>

    <div id="menu_wrap" class="bg_white">
        <div class="option">
            <div>
                <form onsubmit="searchPlaces(); return false;">
                    키워드 : <input type="text" value="이태원 맛집" id="keyword" size="15"> 
                    <button type="submit">검색하기</button> 
                </form>
            </div>
        </div>
        <hr>
        <ul id="placesList"></ul>
        <div id="pagination"></div>
    </div>
</div>

<%= form_tag user_path(current_user), method: :put do %>
	<%= hidden_field_tag :latitude, nil, id: "hidden-field-latitude" %>
	<%= submit_tag "제출" %>
<% end %>

<script type="text/javascript" src="//apis.daum.net/maps/maps3.js?apikey=84c40a437737b11d786495cd855f5774&libraries=services"></script>